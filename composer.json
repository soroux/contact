{
    "name": "soroux/contact",
    "description": "a laravel package that helps contact users",
    "keywords": [
        "Soroux/Contact",
        "Contact"
    ],
    "homepage": "https://github.com/soroux/contact",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "soroux",
            "email": "soroush.ganjuee@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Soroux\\Contact\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Soroux\\Contact\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Soroux\\Contact\\ContactServiceProvider"
            ],
            "aliases": {
                "Contact": "Soroux\\Contact\\ContactFacade"
            }
        }
    }
}
